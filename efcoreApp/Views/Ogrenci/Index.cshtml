@model IEnumerable<Ogrenci>
<table class="table table-bordered">
    <h2>Öğrenci Listesi</h2>
    <a href="/Ogrenci/Create" class="btn btn-primary">Öğrenci Ekle</a>
    <hr>
    <thead>
        <tr>
            <th tyle="width: 150px;">@Html.DisplayNameFor(m=>m.OgrenciId)</th>
            <th>@Html.DisplayNameFor(m=>m.OgrenciAd)</th>
            <th>@Html.DisplayNameFor(m=>m.OgrenciSoyad)</th>
            <th style="width: 150px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var Ogrenci in Model)
        {
            <tr>
               <td>@Html.DisplayFor(modelItem=> Ogrenci.OgrenciId)</td>
               <td>@Html.DisplayFor(modelItem=> Ogrenci.OgrenciAd)</td>
               <td>@Html.DisplayFor(modelItem=> Ogrenci.OgrenciSoyad)</td>
               <td>
                <a asp-controller="Ogrenci" asp-action="Edit" asp-route-id="@Ogrenci.OgrenciId" class="btn btn-sm btn-primary">Edit</a>
                <a asp-controller="Ogrenci" asp-action="Delete" asp-route-id="@Ogrenci.OgrenciId" class="btn btn-sm btn-danger">Delete</a>
               </td>
            </tr>
        }
    </tbody>
</table>
